@model List<ConsoleApp.Models.ArticleViewModel>
@{
    Layout = "_Layout";
}
<h1>数量：@Model.Count</h1>

@if (Model.Count > 0)
{
    <h4>列表</h4>
    <table class="table">
        <thead>
            <tr>
                <td>名称</td>
                <td>简介</td>
                <td>用户</td>
                <td>时间</td>
                <td>类型</td>
            </tr>
        </thead>
        <tbody>
            @for (var index = 0; index < Model.Count; index++)
            {
                <tr>
                    <td><a target="_blank" href="Article/ArtDet/@Model[index].ArtID">@Model[index].ArtTitle </a></td>
                    <td><a target="_blank" href="Article/ArtDet/@Model[index].ArtID">@Model[index].ArtDetail</a></td>
                    <td>@Model[index].UserName</td>
                    <td>@Model[index].EditTime</td>
                    <td>@Model[index].ArtTypeName</td>
                </tr>
            }
        </tbody>
    </table>
}
